extends ../layouts/common

block content
  div Update
  img(src=!user.avatar ? "https://cdn.glitch.com/76518169-9662-4082-9d70-72da336ba7bd%2Fphoto_2020-08-10_20-08-03.jpg?v=1597545651946" : user.avatar width="100" height="100")
  form(action=`/profile/updateAvatar?_method=PUT&_csrf=${csrfToken}` method="post" enctype="multipart/form-data")
    input(type='hidden', name="id", value= user.id)
    div
      label(for='userAvatar') Avatar: 
      input#userAvatar.form-control(type='file', name="avatar", accept="image/png, image/jpeg")
    button.btn.btn-success(type='submit') Update